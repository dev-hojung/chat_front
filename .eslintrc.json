{
  "parser": "@typescript-eslint/parser",
  "plugins": ["prettier", "@typescript-eslint", "simple-import-sort", "tailwindcss"],
  "extends": ["next/core-web-vitals", "prettier", "plugin:@typescript-eslint/recommended", "plugin:tailwindcss/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "endOfLine": "auto",
        "bracketSpacing": true,
        "htmlWhitespaceSensitivity": "css",
        "printWidth": 100,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false,
        "parser": "typescript", 
        "filepath": "", 
        "rangeStart": 0,
        "requirePragma": false,
        "insertPragma": false,
        "overrides": [
          {
            "files": "*.json",
            "options": {
              "printWidth": 100
            }
          }
        ]
      }
    ]
  }
}